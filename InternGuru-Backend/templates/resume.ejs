<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= data.name %> - Resume</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="max-w-3xl mx-auto p-10 font-sans text-gray-900">

  <header class="border-b-4 border-blue-600 pb-4 mb-8">
    <h1 class="text-4xl font-bold text-blue-700"><%= data.name %></h1>
    <div class="text-sm text-gray-600 mt-1 space-x-4">
      <span><%= data.title %></span>
      <span>|</span>
      <span><%= data.email %></span>
      <span>|</span>
      <span><%= data.phone %></span>
      <span>|</span>
      <span><%= data.location %></span>
    </div>
  </header>

  <section class="mb-8">
    <h2 class="text-2xl font-semibold text-blue-600 mb-3 border-b border-blue-600 pb-1">Summary</h2>
    <p class="italic text-gray-700"><%= data.summary %></p>
  </section>

  <section class="mb-8">
    <h2 class="text-2xl font-semibold text-blue-600 mb-4 border-b border-blue-600 pb-1">Skills</h2>
    <ul class="flex flex-wrap gap-3">
      <% data.skills.forEach(skill => { %>
        <li class="bg-blue-100 text-blue-700 px-4 py-1 rounded-full font-semibold text-sm"><%= skill %></li>
      <% }) %>
    </ul>
  </section>

  <section class="mb-8">
    <h2 class="text-2xl font-semibold text-blue-600 mb-4 border-b border-blue-600 pb-1">Education</h2>
    <% data.education.forEach(edu => { %>
      <div class="mb-4">
        <h3 class="font-semibold text-lg"><%= edu.degree %> <span class="font-normal text-gray-600">- <%= edu.institution %></span></h3>
        <p class="text-gray-500 italic"><%= edu.year %></p>
      </div>
    <% }) %>
  </section>

  <section>
    <h2 class="text-2xl font-semibold text-blue-600 mb-4 border-b border-blue-600 pb-1">Experience</h2>
    <% data.experience.forEach(exp => { %>
      <div class="mb-6">
        <h3 class="font-semibold text-lg"><%= exp.jobTitle %> <span class="font-normal text-gray-600">@ <%= exp.company %></span></h3>
        <p class="text-gray-500 italic mb-2"><%= exp.duration %></p>
        <p class="text-gray-800 whitespace-pre-line"><%= exp.description %></p>
      </div>
    <% }) %>
  </section>

</body>
</html>
